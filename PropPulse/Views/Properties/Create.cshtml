<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İlan Verme Sayfası</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Arka plan resmini bulanıklaştırma */
        .blurred-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('sakarya-emlak-sitesi_20200301232605924cqjyu.jpg');
            background-size: cover;
            background-position: center;
            filter: blur(5px);
            z-index: -1;
        }

        /* Başlık İçin Animasyon ve Stil */
        .title-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            z-index: 999;
            animation: moveTitle 2s ease-out forwards;
        }

        .title {
            font-size: 4rem;
            font-weight: bold;
            color: #ff0000;
        }

        .subtitle {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ffffff;
            margin-top: 10px;
        }

        @@keyframes moveTitle {
            0% {
                top: 20%;
                transform: translate(-50%, -50%);
            }

            100% {
                top: 10%;
                transform: translate(-50%, -10%);
            }
        }

        /* İlan Verme Formu Stili */
        .form-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 15rem;
        }

            .form-container label {
                font-weight: bold;
            }

            .form-container button {
                background-color: #ff0000;
                color: white;
                font-weight: bold;
            }

                .form-container button:hover {
                    background-color: #cc0000;
                }

        /* Ana Sayfa Butonu */
        .home-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 1000;
        }

            .home-button button {
                font-size: 1.25rem;
                font-weight: bold;
                padding: 10px 20px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 5px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            }

                .home-button button:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="blurred-background"></div>

    <div class="title-container">
        <div class="title">PropPulse Emlak</div>
        <div class="subtitle">Hadi, ilanını yayınla!</div>
    </div>
    <div class="container">
        <div class="form-container mx-auto col-md-8">
            <h3 class="text-center">İlan Ver</h3>
            <form asp-action="Create" asp-controller="Properties" method="post">
                <!-- İlan Başlığı -->
                <div class="mb-3">
                    <label for="Title" class="form-label">İlan Başlığı</label>
                    <input type="text" class="form-control" id="Title" name="Title" placeholder="İlan başlığını giriniz" required maxlength="100">
                </div>

                <!-- Fiyat -->
                <div class="mb-3">
                    <label for="Price" class="form-label">Fiyat</label>
                    <input type="number" class="form-control" id="Price" name="Price" placeholder="Fiyatı giriniz (örneğin: 250000)" required min="1">
                </div>

                <!-- Alan (Metrekare) -->
                <div class="mb-3">
                    <label for="Area" class="form-label">Alan (m²)</label>
                    <input type="number" class="form-control" id="Area" name="Area" placeholder="Evin alanını giriniz (örneğin: 120)" required min="10" max="10000">
                </div>

                <!-- Adres -->
                <div class="mb-3">
                    <label for="Address" class="form-label">Adres</label>
                    <input type="text" class="form-control" id="Address" name="Address" placeholder="Adres bilgilerini giriniz" required maxlength="200">
                </div>

                <!-- Açıklama -->
                <div class="mb-3">
                    <label for="Description" class="form-label">Açıklama</label>
                    <textarea class="form-control" id="Description" name="Description" placeholder="Evin detaylarını yazabilirsiniz" maxlength="500"></textarea>
                </div>

                <!-- Eşya Durumu -->
                <div class="mb-3">
                    <label for="IsFurnished" class="form-label">Eşya Durumu</label>
                    <select class="form-select" id="IsFurnished" name="IsFurnished" required>
                        <option value="">Seçiniz</option>
                        <option value="true">Eşyalı</option>
                        <option value="false">Eşyasız</option>
                    </select>
                </div>

                <!-- Brüt Metrekare -->
                <div class="mb-3">
                    <label for="SquareMeter" class="form-label">Brüt Metrekare</label>
                    <input type="number" class="form-control" id="SquareMeter" name="SquareMeter" placeholder="Brüt metrekareyi giriniz" required>
                </div>

                <!-- Fotoğraflar 
                <div class="mb-3">
                    <label for="Photos" class="form-label">Fotoğraflar (maksimum 3 adet)</label>
                    <input type="file" class="form-control" id="Photos" name="Photos" accept="image/*" multiple required>
                    <small class="form-text text-muted">Maksimum 3 fotoğraf yükleyebilirsiniz.</small>
                </div>
                -->
                <!-- İlanı Yayınla -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@modelError.ErrorMessage</p>
                        }
                    </div>
                }

                <div class="text-center">
                    <button type="submit" value="Create" class="btn btn-primary">İlanı Yayınla</button>
                </div>
            </form>
        </div>
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>