@{
    ViewData["Title"] = "İlan Ver";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Stil ve Animasyonlar Burada */
    </style>
</head>
<body>
    <div class="blurred-background"></div>

    <div class="title-container">
        <div class="title">PropPulse Emlak</div>
        <div class="subtitle">Hadi, ilanını yayınla!</div>
    </div>

    <div class="container">
        <div class="form-container mx-auto col-md-8">
            <h3 class="text-center">İlan Ver</h3>
            <form asp-action="Create" asp-controller="Properties" method="post" enctype="multipart/form-data">
                <!-- İlan Başlığı -->
                <div class="mb-3">
                    <label for="Title" class="form-label">İlan Başlığı</label>
                    <input type="text" class="form-control" id="Title" name="Title" placeholder="İlan başlığını giriniz" required maxlength="100">
                </div>

                <!-- Fiyat -->
                <div class="mb-3">
                    <label for="Price" class="form-label">Fiyat</label>
                    <input type="number" class="form-control" id="Price" name="Price" placeholder="Fiyatı giriniz (örneğin: 250000)" required min="1">
                </div>

                <!-- Alan (Metrekare) -->
                <div class="mb-3">
                    <label for="Area" class="form-label">Alan (m²)</label>
                    <input type="number" class="form-control" id="Area" name="Area" placeholder="Evin alanını giriniz (örneğin: 120)" required min="10" max="10000">
                </div>

                <!-- Adres -->
                <div class="mb-3">
                    <label for="Address" class="form-label">Adres</label>
                    <input type="text" class="form-control" id="Address" name="Address" placeholder="Adres bilgilerini giriniz" required maxlength="200">
                </div>

                <!-- Açıklama -->
                <div class="mb-3">
                    <label for="Description" class="form-label">Açıklama</label>
                    <textarea class="form-control" id="Description" name="Description" placeholder="Evin detaylarını yazabilirsiniz" maxlength="500"></textarea>
                </div>

                <!-- Eşya Durumu -->
                <div class="mb-3">
                    <label for="IsFurnished" class="form-label">Eşya Durumu</label>
                    <select class="form-select" id="IsFurnished" name="IsFurnished" required>
                        <option value="">Seçiniz</option>
                        <option value="true">Eşyalı</option>
                        <option value="false">Eşyasız</option>
                    </select>
                </div>

                <!-- Brüt Metrekare -->
                <div class="mb-3">
                    <label for="SquareMeter" class="form-label">Brüt Metrekare</label>
                    <input type="number" class="form-control" id="SquareMeter" name="SquareMeter" placeholder="Brüt metrekareyi giriniz" required>
                </div>

                <!-- Fotoğraflar -->
                <div class="mb-3">
                    <label for="Photos" class="form-label">Fotoğraflar (maksimum 3 adet)</label>
                    <input type="file" class="form-control" id="Photos" name="Photos" accept="image/*" multiple required>
                    <small class="form-text text-muted">Maksimum 3 fotoğraf yükleyebilirsiniz.</small>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@modelError.ErrorMessage</p>
                        }
                    </div>
                }

                <div class="text-center">
                    <button type="submit" value="Create" class="btn btn-primary">İlanı Yayınla</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
