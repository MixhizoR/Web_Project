@model Property

@{
    ViewData["Title"] = "İlanı Düzenle";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">İlanı Düzenle</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title" class="control-label">Başlık</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label">Fiyat</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Area" class="control-label">Alan</label>
            <input asp-for="Area" class="form-control" />
            <span asp-validation-for="Area" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label">Adres</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Açıklama</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsFurnished" class="control-label">Eşyalı Durum</label>
            <select asp-for="IsFurnished" class="form-control">
                <option value="true">Eşyalı</option>
                <option value="false">Eşyasız</option>
            </select>
            <span asp-validation-for="IsFurnished" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RoomCount" class="control-label">Oda Sayısı</label>
            <input asp-for="RoomCount" class="form-control" />
            <span asp-validation-for="RoomCount" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Güncelle</button>
        <a href="@Url.Action("MyProperties", "Properties")" class="btn btn-secondary">İptal</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
