@model PropPulse.Models.Property

@{
    ViewData["Title"] = "İlan Düzenle";
}

<h1>İlan Düzenle</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Area"></label>
        <input asp-for="Area" class="form-control" />
        <span asp-validation-for="Area" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="IsFurnished" class="form-label">Eşya Durumu</label>
        <select class="form-select" id="IsFurnished" name="IsFurnished" required>
            <option value="">Seçiniz</option>
            <option value="true">Eşyalı</option>
            <option value="false">Eşyasız</option>
        </select>
    </div>


    <div class="form-group">
        <label asp-for="RoomCount"></label>
        <input asp-for="RoomCount" class="form-control" />
        <span asp-validation-for="RoomCount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="IsRent" class="form-label">Durum</label>
        <select class="form-select" id="IsRent" name="IsRent" required>
            <option value="">Seçiniz</option>
            <option value="true">Kiralık</option>
            <option value="false">Satılık</option>
        </select>
    <div class="form-group">
        <label>Mevcut Fotoğraflar</label>
        <div>
            @foreach (var photo in Model.Photos)
            {
                <div class="photo-item">
                    <img src="@photo" alt="Fotoğraf" style="width: 100px; height: auto;" />
                    <input type="checkbox" name="existingPhotosToDelete" value="@photo" />
                    <span>Sil</span>
                </div>
            }
        </div>
    </div>

    <div class="form-group">
        <label>Yeni Fotoğraflar Ekle</label>
        <input type="file" name="newPhotos" multiple class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
